generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String   @id @default(cuid())
  name      String
  icon      String
  color     String
  createdAt DateTime @default(now())
  
  events Event[]
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  date        String
  time        String
  location    String
  latitude    Float?
  longitude   Float?
  image       String?
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}